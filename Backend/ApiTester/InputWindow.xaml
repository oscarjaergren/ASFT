<Window x:Class="ApiTester.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputWindow" Height="300" Width="300"
		SizeToContent="Height"
		ResizeMode="NoResize">
	<Grid>
		<StackPanel>
			<StackPanel Name="InputControls" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Stretch"/>
			<Grid>
				<Button Content="Ok" HorizontalAlignment="Left" Margin="127,0,0,10" VerticalAlignment="Top" Width="75" IsDefault="True" Click="OkButton_Click"/>
				<Button Content="Cancel" HorizontalAlignment="Left" Margin="207,0,0,10" VerticalAlignment="Top" Width="75" IsCancel="True" Click="CancelButton_Click"/>
			</Grid>
		</StackPanel>
	</Grid>
</Window>
